<main role="main" class="container">

  <div class="row">

    <div class="col-sm-8 blog-main">
      <% @problems.each do |problem| %>
        <div class="blog-post">
          <h2 class="blog-post-title"><%= link_to problem.title, problem_path(problem) %></h2>
          <p class="blog-post-meta">Published <%= distance_of_time_in_words(problem.created_at, Time.now) %> ago</p>

          <p>
            <%= problem.body %>
          </p>
        </div><!-- /.blog-post -->
      <% end %> 

      <div class='form-group'>
        <%= link_to "Create New", new_problem_path, class: 'btn btn-primary' %>
